# https://newsraft.codeberg.page/#ACTIONS
# https://codeberg.org/newsraft/newsraft

bind ? exec man newsraft
bind m exec setsid mpv --pause --volume=60 --ytdl-format="best[height<=480]" --terminal=no "%l" &
bind H exec setsid mpv --pause --volume=60 --ytdl-format="best[height<=720]" --terminal=no "%l" &
bind E exec setsid mpv --pause --volume=60 --ytdl-format="best[height<=1080]" --terminal=no "%l" &
bind M exec setsid mpv --pause --volume=60 --terminal=no "%l" &
bind a exec setsid mpv --pause --volume=60 --ytdl-format="bestaudio" --terminal=no "%l" &
bind f exec setsid nsxiv "%l"
bind y copy-to-clipboard
bind I mark-important
bind U mark-unimportant
bind n jump-to-next-unread
bind p jump-to-prev-unread
bind N jump-to-next-important
bind P jump-to-prev-important
bind t sort-by-time
bind i sort-by-important
bind a sort-by-alphabet
bind u sort-by-unread
bind d mark-read; jump-to-next
bind D mark-unread; jump-to-next
bind tab toggle-explore-mode
bind o open-in-browser
