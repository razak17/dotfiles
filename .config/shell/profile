#!/bin/zsh

typeset -U PATH path

LOCAL="$HOME/.local/bin"
path+=(
  "$LOCAL"
  "$LOCAL/dmenu"
  "$LOCAL/dwm"
  "$LOCAL/sb"
  "$LOCAL/statusbar"
  "$LOCAL/startup"
  "$LOCAL/utils"
)

# uv
[ -f "$HOME/.local/share/../bin/env" ] && . "$HOME/.local/share/../bin/env"

# fzf
if [ -f $HOME/.fzf/bin/fzf ]; then
  source $HOME/.fzf.zsh
  source <(fzf --zsh)
fi

# java
export JAVA_HOME="/usr/lib/jvm/java-24-openjdk";

# g - go version manager
export GOPATH="$HOME/go";
export GOROOT="$HOME/.go";
path+=(
  "$GOPATH/bin"
)

# fnm
if [ -e "$HOME/.local/share/fnm/fnm" ]; then
  export FNMDIR="$HOME/.local/share/fnm"
  path+=(
    "$FNMDIR"
  )
fi

# pnpm
export PNPM_HOME="$HOME/.local/share/pnpm"
path+=(
"$PNPM_HOME"
)


# Fly
if [ -e "$HOME/.fly/bin/fly" ]; then
  export FLYCTL_INSTALL="$HOME/.fly"
  path+=(
  "$FLYCTL_INSTALL/bin"
  )
fi

# Turso
if [ -e "$HOME/.turso/turso" ]; then
  export TURSO_INSTALL="$HOME/.turso/"
  path+=(
  "$TURSO_INSTALL"
  )
fi

# Cargo
if [ -e "$HOME/.cargo" ]; then
  export CARGO_PATH="$HOME/.cargo/"
  path+=(
  "$CARGO_PATH/bin"
  )
fi

# duckdb
if [ -f "$HOME/.duckdb/cli/latest/duckdb" ]; then
  export DUCK_DB="$HOME/.duckdb/"
  path+=(
  "$DUCK_DB/cli/latest"
  )
fi

# opencode
if [ -e "$HOME/.opencode/bin/opencode" ]; then
  export OPENCODE_PATH="$HOME/.opencode/"
  path+=(
  "$OPENCODE_PATH/bin"
  )
fi

export PATH
