#!/bin/zsh

typeset -U PATH path

LOCAL="$HOME/.local/bin"
ASDF_INSTALLS="$HOME/.asdf/installs"

export MANPATH="/usr/local/man:$MANPATH"
if which nvim >/dev/null; then
  export MANPAGER='nvim +Man!'
fi

# you may need to manually set your language environment
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# preferred editor for local and remote sessions
if [ -n "$NVIM_LISTEN_ADDRESS" ]; then
  export VISUAL="nvr -cc split --remote-wait +'set bufhidden=wipe'"
  export EDITOR="nvr -cc split --remote-wait +'set bufhidden=wipe'"
else
  export VISUAL="rvim"
  export EDITOR="rvim"
fi

export USE_EDITOR=$EDITOR

export GPG_TTY=$(tty)
export CLICOLOR=1
export SUDO_ASKPASS="$LOCAL/dmenu/dmenupass"

# Enable a better reverse search experience.
export FZF_DEFAULT_COMMAND="rg --files --hidden --follow --glob '!.git'"
export FZF_DEFAULT_OPTS="--layout=reverse --inline-info --height=80% --color=dark --history=$HOME/.fzf_history"
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND" # To apply to the command to CTRL-T as well
export FZF_TMUX=0 # Don't open FZF in a separate split in tmux

# History
export HIST_STAMPS="mm/dd/yyyy"
export HISTFILE=$ZSH_CACHE_DIR/.zsh_history
export HISTSIZE=50000
export SAVEHIST=50000

# Plugin Options & Configurations
export ZSH_AUTOSUGGEST_STRATEGY=(match_prev_cmd history completion)
export ZSH_AUTOSUGGEST_BUFFER_MAX_SIZE=20
export ZSH_AUTOSUGGEST_MANUAL_REBIND=""
export ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets)
export ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=241'

# ignore params
export CORRECT_IGNORE="bin"
export CORRECT_IGNORE_FILE=".*"

# asdf
if [ -e "$HOME/.asdf/asdf.sh" ]; then
  source $HOME/.asdf/asdf.sh
fi

# fnm
if [ -e "$HOME/.fnm/fnm" ]; then
  version="v18.0.0"
  export FNMDIR="$HOME/.fnm"
  FNM_PREFIX="$HOME/.fnm/node-versions/$version/installation"
  export FNMPATH="$FNM_PREFIX/bin"
fi

# GO
if [ -d "$ASDF_INSTALLS/golang" ]; then
  v="1.18.1"
  export GOHOME="$ASDF_INSTALLS/golang/$v"
  export GOROOT="$ASDF_INSTALLS/golang/$v/go"
  export GOPATH="$HOME/go"
fi

# YARN
if [ -d "$HOME/.yarn" ]; then
  export YARNPATH="$HOME/.yarn/bin"
fi

# Azure cli
if [ -d "$HOME/lib/azure-cli" ]; then
  export AZCLI="$HOME/lib/azure-cli/bin"
fi

# Codelldb for use in neovim
if [ -d "$HOME/.vscode-oss/extensions/vadimcn.vscode-lldb-1.7.0" ]; then
  export CODELLDB='$HOME/.vscode-oss/extensions/vadimcn.vscode-lldb-1.7.0'
fi

path=(
  "$LOCAL"
  "$LOCAL/dmenu"
  "$LOCAL/dwm"
  "$LOCAL/sb"
  "$LOCAL/statusbar"
  "$LOCAL/startup"
  "$LOCAL/utils"
  "$FNMDIR"
  "$GOHOME/packages/bin"
  "$GOPATH/bin"
  "$GOROOT/bin"
  "$FNMPATH"
  "$YARNPATH"
  "$AZCLI"
  "$path[@]"
)

export PATH
