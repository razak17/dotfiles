#!/bin/zsh

typeset -U PATH path

LOCAL="$HOME/.local/bin"
path+=(
  "$LOCAL"
  "$LOCAL/dmenu"
  "$LOCAL/dwm"
  "$LOCAL/sb"
  "$LOCAL/statusbar"
  "$LOCAL/startup"
  "$LOCAL/utils"
)

# fzf
[ -f $HOME/.fzf.zsh ] && source $HOME/.fzf.zsh

# g - go version manager
export GOPATH="$HOME/go";
export GOROOT="$HOME/.go";
path+=(
  "$GOPATH/bin"
)

# fnm
if [ -e "$HOME/.local/share/fnm/fnm" ]; then
  export FNMDIR="$HOME/.local/share/fnm"
  path+=(
    "$FNMDIR"
  )
fi

# YARN
if [ -d "$HOME/.yarn/bin" ]; then
  export YARNPATH="$HOME/.yarn/bin"
  path+=(
    "$YARNPATH"
  )
fi

# DENO
if [ -e "$HOME/.deno/bin/deno" ]; then
  export DENO_INSTALL="/home/razak/.deno"
  path+=(
    "$DENO_INSTALL/bin"
  )
fi

# Deta cli
if [ -e "$HOME/.deta/bin/deta" ]; then
  export DETA_HOME="$HOME/.deta"
  path+=(
  "$DETA_HOME/bin"
  )
fi


# bun
if [ -d "$HOME/.bun" ]; then
  export BUN_INSTALL="$HOME/.bun"
  path+=(
  "$BUN_INSTALL/bin"
  )
fi

# pnpm
export PNPM_HOME="/home/razak/.local/share/pnpm"
path+=(
"$PNPM_HOME"
)

export PATH
