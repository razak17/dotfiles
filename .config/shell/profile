#!/bin/zsh

typeset -U PATH path

LOCAL="$HOME/.local/bin"
path+=(
  "$LOCAL"
  "$LOCAL/dmenu"
  "$LOCAL/dwm"
  "$LOCAL/sb"
  "$LOCAL/statusbar"
  "$LOCAL/startup"
  "$LOCAL/utils"
)

# fzf
[ -f $HOME/.fzf.zsh ] && source $HOME/.fzf.zsh

# asdf
[ -f $HOME/.asdf/asdf.sh ] && source $HOME/.asdf/asdf.sh

# fnm
if [ -e "$HOME/.fnm/fnm" ]; then
  version="v18.0.0"
  export FNMDIR="$HOME/.fnm"
  FNM_PREFIX="$HOME/.fnm/node-versions/$version/installation"
  export FNMPATH="$FNM_PREFIX/bin"
  path+=(
    "$FNMDIR"
    "$FNMPATH"
  )
fi

# YARN
if [ -d "$HOME/.yarn/bin" ]; then
  export YARNPATH="$HOME/.yarn/bin"
  path+=(
    "$YARNPATH"
  )
fi

# GO
v="1.19.3"
ASDF_INSTALLS="$HOME/.asdf/installs"
if [ -d "$ASDF_INSTALLS/golang/$V" ]; then
  export GOHOME="$ASDF_INSTALLS/golang/$v"
  export GOROOT="$ASDF_INSTALLS/golang/$v/go"
  export GOPATH="$HOME/go"
  path+=(
    "$GOHOME/packages/bin"
    "$GOROOT/bin"
    "$GOPATH/bin"
  )
fi

# Codelldb for use in neovim
local CODELLDB_DIR="$HOME/.vscode-oss/extensions/vadimcn.vscode-lldb-1.8.1"
if [ -d $CODELLDB_DIR ]; then
  export CODELLDB=$CODELLDB_DIR
fi

# Deta cli
if [ -e "$HOME/.deta/bin/deta" ]; then
  export DETA_HOME="$HOME/.deta"
  path+=(
  "$DETA_HOME/bin"
  )
fi

export PATH
