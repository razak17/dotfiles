# compress
function comp() {
  local DATE="$(date +%Y%m%d-%H%M%S)"
  tar cvzf "$DATE-$@.tar.gz" "$@"
}

function back() {
  for file in "$@"; do
    cp "$file" "$file".bak
  done
}

function lsg() {
  ls | grep "$@"
}

function npmi() {
  npm install --save-dev "$@"
}

function colours() {
  for i in {0..255}; do
    printf "\x1b[38;5;${i}m colour${i}"
    if (( $i % 5 == 0 )); then
      printf "\n"
    else
      printf "\t"
    fi
  done
}
