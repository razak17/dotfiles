#!/bin/zsh

# Init completions
autoload -Uz compinit
zmodload -i zsh/complist
_comp_options+=(globdots)   # Include hidden files.
compinit

# profiling
zmodload zsh/zprof

# DO not highligh& pasted text
zle_highlight=('paste:none')

# colors
autoload -U colors && colors

# Local scripts
for script in $ZDOTDIR/scripts/*; do
  source $script
done

# These should be source *BEFORE* setting up hooks
add_plugin 'zsh-completions'
add_plugin 'zsh-autosuggestions'
add_plugin 'zsh-syntax-highlighting'
add_plugin 'zsh-hist'
add_plugin 'git'
add_completion 'conda-zsh-completion' false
add_completion 'fnm'
autoload zmv # builtin zsh rename command

# ignore params
CORRECT_IGNORE="bin"
CORRECT_IGNORE_FILE=".*"

# Load modules
add_modules opts compe vim-mode hooks binds prompt aliases

# Plugins options
ZSH_AUTOSUGGEST_STRATEGY=(match_prev_cmd history completion)
ZSH_AUTOSUGGEST_BUFFER_MAX_SIZE=20
ZSH_AUTOSUGGEST_MANUAL_REBIND=""
ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets)

# asdf
if exists asdf; then
  fpath+="$ASDF_DIR/completions/"
fi

# fnm
if exists fnm; then
  eval "`fnm env`"
fi

# Azure cli
if exists az; then
  source $HOME/lib/azure-cli/az.completion
fi

# zoxide
if exists zoxide; then
  eval "$(zoxide init zsh)"
fi

# fzf
[ -f $HOME/.fzf.zsh ] && source $HOME/.fzf.zsh

# conda_init and pip
conda_init false

python_venv() {
  MYVENV=./venv
  MYDOTVENV=".venv"
  MYPIPENV=./Pipfile
  # when you cd into a folder that contains $MYVENV
  [[ -d $MYVENV ]] && source $MYVENV/bin/activate
  [[ -d $MYDOTVENV ]] && source $MYDOTVENV/bin/activate
  [[ -e $MYPIPENV ]] && pipenv shell
  # when you cd into a folder that doesn't
  [[ ! -d $MYVENV || ! -e $MYPIPENV ]] && deactivate > /dev/null 2>&1
}
autoload -U add-zsh-hook
add-zsh-hook chpwd python_venv

python_venv

# Load and initialize the completion system ignoring insecure directories with a
# cache time of 20 hours, so it should almost always regenerate the first time a
# shell is opened each day.
# #q expands globs in conditional expressions
_comp_path="${XDG_CACHE_HOME:-$HOME/.cache}/zsh/zcompdump"
if [[ $_comp_path(#qNmh-20) ]]; then
  # -C (skip function check) implies -i (skip security check).
  compinit -C -d "$_comp_path"
else
  mkdir -p "$_comp_path:h"
  compinit -i -d "$_comp_path"
  # Keep $_comp_path younger than cache time even if it isn't regenerated.
  touch "$_comp_path"
fi
unset _comp_path
