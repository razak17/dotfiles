#!/bin/zsh
autoload -Uz add-zsh-hook

zshcache_time="$(date +%s%N)"

# On-demand rehash
rehash_precmd() {
  if [[ -a /var/cache/zsh/pacman ]]; then
    local paccache_time="$(date -r /var/cache/zsh/pacman +%s%N)"
    if (( zshcache_time < paccache_time )); then
      rehash
      zshcache_time="$paccache_time"
    fi
  fi
}
add-zsh-hook -Uz precmd rehash_precmd

# cdr
autoload -Uz chpwd_recent_dirs cdr
add-zsh-hook chpwd chpwd_recent_dirs


command_not_found_handler() {
  local pkgs cmd="$1" files=()
  printf "command '%s' does not exist\n" "$cmd" # print command not found asap, then search for packages
  return 127
}

# chpwd hook for python virtal environments
chpwd_activate_venv() {
  if [[ -d .env && -e .env/bin/activate ]]; then
    source .env/bin/activate
  elif [[ -d env && -e env/bin/activate ]]; then
    source env/bin/activate
  elif [[ -d .venv && -e .venv/bin/activate ]]; then
    source .venv/bin/activate
  elif [[ -d venv && -e venv/bin/activate ]]; then
    source venv/bin/activate
  elif [[ -n "$VIRTUAL_ENV" && ! -d .venv ]]; then
    deactivate
  fi
}
add-zsh-hook chpwd chpwd_activate_venv

