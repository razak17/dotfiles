#!/bin/sh

installTuxi() {
  echo "Installing dependencies for tuxi..."
  sudo pacman -S jq recode
  go get github.com/ericchiang/pup
  sudo curl -sL "https://raw.githubusercontent.com/Bugswriter/tuxi/main/tuxi" -o ~/.local/bin/tuxi
  sudo chmod +x $HOME/.local/bin/tuxi
  tuxi "Is Linux better than Windows?"
}

installYtfzf() {
  echo "Installing dependencies for ytfzf..."
  sudo pacman -S jq mpv youtube-dl fzf ueberzug
  yay -S ytfzf
}

installGetNf() {
  mkdir -p $HOME/.dots
  pushd $HOME/.dots
  git clone https://github.com/ronniedroid/getnf.git
  pushd getnf
  ./install.sh
}

installNeuron() {
  curl -L https://nixos.org/nix/install | sh
  . /home/razak/.nix-profile/etc/profile.d/nix.sh
  nix-env -iA cachix -f https://cachix.org/api/v1/install
  cachix use srid
  nix-env -if https://github.com/srid/neuron/archive/master.tar.gz
  neuron --version
}

while [[ "$#" -gt 0 ]]; do
  curr=$1
  shift

  case "$curr" in
  -xi | --tuxi)
    installTuxi
    ;;
  -yt | --ytfzf)
    installYtfzf
    ;;
  -a | --all)
    installTuxi
    installYtfzf
  ;;
  *) echo "Unavailable command... $curr"
  esac
done
