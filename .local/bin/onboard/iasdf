#!/bin/sh

installNode() {
	asdf plugin-add nodejs https://github.com/asdf-vm/asdf-nodejs.git
	bash ~/.asdf/plugins/nodejs/bin/import-release-team-keyring
	asdf install nodejs 15.5.1
	asdf global nodejs 15.5.1
}

installGolang() {
	asdf plugin-add golang https://github.com/kennyp/asdf-golang.git
	asdf install golang 1.16.2
	asdf global golang 1.16.2
}

installErlang() {
	asdf plugin-add erlang
	asdf install erlang 23.2.7
	asdf global erlang 23.2.7
}

installElixir() {
	asdf plugin-add elixir
	asdf install elixir 1.11.3-otp-23
	asdf global elixir 1.11.3-otp-23
}

installYarn() {
	asdf plugin-add yarn
	asdf install yarn latest
	asdf global yarn 1.22.17
}

while [[ "$#" -gt 0 ]]; do
	curr=$1
	shift

	case "$curr" in
	"-node")
		installNode
		;;
	"-go")
		installGolang
		;;
	"-erl")
		installErlang
		;;
	"-ex")
		installElixir
		;;
	"-yarn")
		installYarn
		;;
	"-all")
		# installNode
		installGolang
		installErlang
		installElixir
		installYarn
		;;
	*) echo "Unavailable command... $curr" ;;
	esac
done
