#!/bin/bash

YAY="yay -Sy"
PAC="sudo pacman -S"

# Install packages
pac_packages=(
  'tmux'
  'ranger'
  'qbittorrent'
  'ttf-joypixels'
#'powerline-fonts'
#'ninja'
# 'cmake'
  'redshift'
  'mpv'
  'xclip'
# 'pamixer'
  'brightnessctl'
  'alacritty'
  'lxappearance'
# 'htop'
  'ripgrep'
  'maim'
  'lazygit'
# 'sloc'
# 'lolcat'
# 'docker'
# 'postgresql'
# 'clang'
# 'firefox'
  'ctags'
# 'rust-analyzer'
  'fzf'
  'fd'
# 'timeshift'
  'kitty'
  'bpytop'
  'screenkey'
  'python-pywal'
  'xwallpaper'
  'exa'
  'toilet'
  'dunst'
  'axel'
  'elinks'
  'youtube-dl'
  'bat'
  'baobab'
  # 'keepassxc'
  # 'thunderbird'
  # 'whatsapp-nativefier'
  # 'telegram-desktop'
  # 'vlc'
  # 'brave'
)

yay_packages=(
  'autokey-gtk'
  'libxft-bgra'
  'zoxide'
  'notion-app'
# 'vscodium-bin'
  # 'skippy-xd'
  # 'packettracer'
  # 'ttf-ancient-fonts'
  # 'wps-office'
)

installAurPackage() {
  echo 'Aur stuff'
  echo '\n'
  for i in ${yay_packages[@]}; do
    echo Installing: $i
    $YAY $i
  done
}

installPacmanPackages() {
  for i in ${pac_packages[@]}; do
    echo Installing: $i
    $PAC $i
  done
}

while [[ "$#" -gt 0 ]]; do
  curr=$1
  shift

  case "$curr" in
  "-yay")
    installAurPackage
    ;;
  "-pac")
    installPacmanPackages
    ;;
  "-all")
    installAurPackage
    installPacmanPackages
  ;;
  *) echo "Unavailable command... $curr"
  esac
done
