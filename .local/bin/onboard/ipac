#!/bin/bash

###############################################################
# NOTE:
# add this to /etc/pacman.conf after artix-archlinux-support is
# installed then run 'pacman -Syu'
# rc-update del lightdm default

# Arch
# [extra]
# Include = /etc/pacman.d/mirrorlist-arch

# [community]
# Include = /etc/pacman.d/mirrorlist-arch

# [universe]
# Server = https://universe.artixlinux.org/$arch
# Server = https://mirror1.artixlinux.org/universe/$arch
# Server = https://mirror.pascalpuffke.de/artix-universe/$arch
# Server = https://artixlinux.qontinuum.space:4443/artixlinux/universe/os/$arch
# Server = https://mirror1.cl.netactuate.com/artix/universe/$arch
##################################################################

installAurPackage() {
	echo 'Aur stuff'
	# notion-app \
	# vscodium-bin \
	# skippy-xd \
	# packettracer \
	# wps-office \
	yay -Sy \
		autokey-gtk \
		libxft-bgra \
		zoxide \
		bibata-cursor-theme \
		devour \
		toilet \
		ttf-joypixels \
		ueberzug \
		jq \
		ttf-ancient-fonts \
    mongodb-compass \
    prisma-studio \
    paru
}

installPacmanPackages() {
	echo 'Pacman stuff'
	# Install packages
	# docker \
	# postgresql \
	# clang \
	# firefox \
	# rust-analyzer \
	# timeshift \
	# keepassxc \
	# thunderbird \
	# whatsapp-nativefier \
	# telegram-desktop \
	# vlc \
	# brave \
	# copyq \
	# pulseaudio \
	# qbittorrent \
	# axel \
	sudo pacman -S \
    zathura \
    zathura-ps \
    zathura-pdf-poppler \
    zathura-djvu \
    zathura-cb \
		aria2 \
		exa \
		plocate \
		xorg-xinput \
		wireless_tools \
		github-cli \
		fd \
		htop \
		ninja \
		pamixer \
		cmake \
		make \
		tmux \
		ranger \
		redshift \
		mpv \
		xclip \
		brightnessctl \
		alacritty \
		lxappearance \
		ripgrep \
		maim \
		lazygit \
		ctags \
		strace \
		fd \
		kitty \
		btop \
		screenkey \
		python-pywal \
		xwallpaper \
		exa \
		dunst \
		elinks \
		youtube-dl \
		bat \
		baobab \
		bmon \
		arc-gtk-theme \
		gvfs \
		xf86-input-libinput \
		android-tools \
		android-file-transfer \
		htop \
		slock \
		lolcat \
		pipewire \
		pipewire-pulse \
		pipewire-media-session \
    git-delta
}

while [[ "$#" -gt 0 ]]; do
	curr=$1
	shift

	case "$curr" in
	-y | --yay)
		installAurPackage
		;;
	-pac | --pacman)
		installPacmanPackages
		;;
	-a | --all)
		installAurPackage
		installPacmanPackages
		;;
	*) echo "Unavailable command... $curr" ;;
	esac
done
