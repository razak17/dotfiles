#!/bin/bash

installAurPackage() {
	# notion-app \
	# vscodium-bin \
	pikaur -S insomnia autokey-gtk libxft-bgra bibata-cursor-theme devour toilet ttf-joypixels \
    ttf-ancient-fonts mongodb-compass prisma-studio paru
}

installPacmanPackages() {
  sudo pacman -S xorg-server xorg-xinit xorg-xkill xorg-xsetroot xorg-xbacklight xorg-xprop xorg-xinput \
    artix-archlinux-support pamixer zsh git curl wget unzip cmake picom dunst mpv xclip ranger \
    pipewire pipewire-pulse pipewire-media-session maim lazygit github-cli ninja wireless_tools \
    zathura zathura-ps zathura-pdf-poppler zathura-djvu zathura-cb imagemagick python-pywal \
    tar libnotify aria2 cowsay arc-gtk-theme rsync ncmpcpp mpd libconfig bluez bluez-utils \
    cmatrix mtools timeshift dosfstools openvpn unrar exa plocate fd ripgrep ctags strace \
    fd btop screenkey exa elinks bat baobab bmon gvfs xf86-input-libinput android-tools \
    android-file-transfer htop lolcat thunderbird postgresql docker bottom tmux sxiv zoxide \
    jq brightnessctl kitty alacritty xwallpaper python-pip slock firefox ueberzug --noconfirm
}

while [[ "$#" -gt 0 ]]; do
	curr=$1
	shift

	case "$curr" in
	-pk | --pikaur)
		installAurPackage
		;;
	-pac | --pacman)
		installPacmanPackages
		;;
	-a | --all)
		installAurPackage
		installPacmanPackages
		;;
	*) echo "Unavailable command... $curr" ;;
	esac
done
