#!/bin/bash

installAurPackage() {
	echo 'Aur stuff'
	# notion-app \
	# vscodium-bin \
	yay -Sy \
		insomnia \
		autokey-gtk \
		libxft-bgra \
		zoxide \
		bibata-cursor-theme \
		devour \
		toilet \
		ttf-joypixels \
		ueberzug \
		jq \
		ttf-ancient-fonts \
		mongodb-compass \
		prisma-studio \
		paru
}

installPacmanPackages() {
	echo 'Pacman stuff'
	# Install packages
	# timeshift \
	# brave \
	# qbittorrent \
	sudo pacman -S \
    cmatrix \
		mtools \
		dosfstools \
		openvpn \
		unrar \
		helix \
		zathura \
		zathura-ps \
		zathura-pdf-poppler \
		zathura-djvu \
		zathura-cb \
		aria2 \
		exa \
		plocate \
		xorg-xinput \
		xorg-xsetroot \
		wireless_tools \
		github-cli \
		fd \
		htop \
		ninja \
		pamixer \
		cmake \
		make \
		tmux \
		ranger \
		redshift \
		mpv \
		xclip \
		brightnessctl \
		alacritty \
		lxappearance \
		ripgrep \
		maim \
		lazygit \
		ctags \
		strace \
		fd \
		kitty \
		btop \
		screenkey \
		python-pywal \
		xwallpaper \
		exa \
		dunst \
		elinks \
		youtube-dl \
		bat \
		baobab \
		bmon \
		arc-gtk-theme \
		gvfs \
		xf86-input-libinput \
		android-tools \
		android-file-transfer \
		htop \
		slock \
		lolcat \
		pipewire \
		pipewire-pulse \
		pipewire-media-session \
		thunderbird \
		postgresql \
		docker \
		firefox \
		git-delta \
		bottom --noconfirm
}

while [[ "$#" -gt 0 ]]; do
	curr=$1
	shift

	case "$curr" in
	-y | --yay)
		installAurPackage
		;;
	-pac | --pacman)
		installPacmanPackages
		;;
	-a | --all)
		installAurPackage
		installPacmanPackages
		;;
	*) echo "Unavailable command... $curr" ;;
	esac
done
