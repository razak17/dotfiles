#!/bin/bash

installAurPackages() {
	# notion-app vscodium-bin autokey-gtk devour
	paru -S insomnia-bin prisma-studio-appimage bibata-cursor-theme toilet ttf-joypixels ttf-ancient-fonts mongodb-compass
}

installPacmanPackages() {
	sudo pacman -S xorg-server xorg-xinit xorg-xkill xorg-xsetroot xorg-xbacklight xorg-xprop xorg-xinput \
		zsh git curl wget unzip cmake picom dunst mpv xclip ranger redis pipewire pipewire-pulse docker jq \
		wireplumber maim ninja python-pywal wireless_tools imagemagick bluez bluez-utils tar openvpn fd mpd \
		libnotify aria2 arc-gtk-theme rsync libconfig ctags strace tmux mtools slock baobab sxiv exa gvfs \
		timeshift dosfstools unrar plocate elinks zoxide lolcat firefox xf86-input-libinput bmon ueberzug \
		bat zathura zathura-ps zathura-pdf-poppler zathura-djvu zathura-cb cowsay postgresql bottom htop \
		ncmpcpp cmatrix github-cli android-tools btop screenkey kitty ripgrep pamixer lazygit git-delta \
		android-file-transfer alacritty thunderbird brightnessctl xwallpaper python-pip opendoas --noconfirm
}

while [[ "$#" -gt 0 ]]; do
	curr=$1
	shift

	case "$curr" in
	-pr | --paru) installAurPackages ;;
	-pac | --pacman) installPacmanPackages ;;
	-a | --all)
		installAurPackage
		installPacmanPackages
		;;
	*) echo "Unavailable command... $curr" ;;
	esac
done
