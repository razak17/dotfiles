#!/bin/bash

installAurPackages() {
	# notion-app autokey-gtk devour
	paru -S insomnia-bin prisma-studio-appimage bibata-cursor-theme toilet ttf-joypixels ttf-ancient-fonts \
    mongodb-compass buildx vscodium-bin slack-desktop
}

installPacmanPackages() {
	sudo pacman -S xorg-server xorg-xinit xorg-xkill xorg-xsetroot xorg-xbacklight xorg-xprop fd xorg-xinput xorg-xdpyinfo jq \
    timeshift dosfstools unrar plocate elinks zoxide lolcat bottom xf86-input-libinput cowsay docker-compose tor mpd gvfs \
    bat alacritty zathura-ps zathura-pdf-poppler zathura-djvu zathura-cb ueberzug postgresql aspell-en tar gparted kitty \
    ncmpcpp cmatrix github-cli android-tools screenkey mpd ripgrep pamixer lazygit firefox git-delta lf zathura pngquant \
    zsh git curl wget unzip cmake picom dunst mpv xclip ranger redis pipewire pipewire-pulse docker expac mediainfo glow \
    wireplumber maim ninja python-pywal wireless_tools imagemagick bluez bluez-utils openvpn htop btop aspell hyperfine \
    libnotify aria2 arc-gtk-theme rsync libconfig ctags strace redshift tmux mtools slock baobab sxiv hwinfo exa xsel \
		android-file-transfer thunderbird brightnessctl xwallpaper python-pip opendoas reflector python-virtualenv --noconfirm
}

while [[ "$#" -gt 0 ]]; do
	curr=$1
	shift

	case "$curr" in
	-pr | --paru) installAurPackages ;;
	-pac | --pacman) installPacmanPackages ;;
	-a | --all)
		installAurPackages
		installPacmanPackages
		;;
	*) echo "Unavailable command... $curr" ;;
	esac
done
