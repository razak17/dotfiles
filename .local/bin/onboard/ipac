  'tmux'
  'ranger'
  'qbittorrent'
  'ttf-joypixels'
  'powerline-fonts'
  'ninja'
  'cmake'
  'redshift'
  'mpv'
  'xclip'
  'pamixer'
  'brightnessctl'
  'alacritty'
  'lxappearance'
  'htop'
  'ripgrep'
  'maim'
  'lazygit'
  'slock'
  'lolcat'
  'docker'
  'postgresql'
  'clang'
  'firefox'
  'ctags'
  'rust-analyzer'
  'fzf'
  'fd'
  'timeshift'
  'kitty'
  'bpytop'
  'screenkey'
  'python-pywal'
  'xwallpaper'
  'exa'
  'toilet'
  'dunst'
  'axel'
  'elinks'
  'youtube-dl'
  'bat'
  # 'keepassxc'
  # 'thunderbird'
  # 'whatsapp-nativefier'
  # 'telegram-desktop'
  # 'vlc'
  # 'brave'
)

yay_packages=(
  'autokey-gtk'
  'vscodium-bin'
  # 'skippy-xd'
  # 'packettracer'
  # 'ttf-ancient-fonts'
  # 'wps-office'
)

for i in ${pac_packages[@]}; do
  echo Installing: $i
  $PAC $i
done

echo 'Aur stuff'
echo '\n'
for i in ${yay_packages[@]}; do
  echo Installing: $i
  $YAY $i
done
