#!/bin/bash

installAurPackage() {
	# notion-app vscodium-bin autokey-gtk devour paru
	pikaur -S insomnia libxft-bgra-git bibata-cursor-theme toilet ttf-joypixels \
		ttf-ancient-fonts mongodb-compass prisma-studio
}

installPacmanPackages() {
	sudo pacman -S xorg-server xorg-xinit xorg-xkill xorg-xsetroot xorg-xbacklight xorg-xprop xorg-xinput \
		artix-archlinux-support pamixer zsh git curl wget unzip cmake picom dunst mpv xclip ranger redis \
		pipewire pipewire-pulse wireplumber maim lazygit ninja python-pywal wireless_tools fd sxiv bat \
		zathura zathura-ps zathura-pdf-poppler zathura-djvu zathura-cb imagemagick bluez bluez-utils \
		tar libnotify aria2 cowsay arc-gtk-theme rsync ncmpcpp mpd libconfig fd ctags strace tmux \
		cmatrix mtools timeshift dosfstools openvpn unrar plocate github-cli tmux android-tools \
		btop screenkey exa elinks baobab bmon gvfs xf86-input-libinput ripgrep bottom zoxide \
		android-file-transfer htop lolcat thunderbird postgresql docker jq slock firefox \
		brightnessctl kitty alacritty xwallpaper python-pip ueberzug --noconfirm
}

while [[ "$#" -gt 0 ]]; do
	curr=$1
	shift

	case "$curr" in
	-pk | --pikaur) installAurPackage ;;
	-pac | --pacman) installPacmanPackages ;;
	-a | --all)
		installAurPackage
		installPacmanPackages
		;;
	*) echo "Unavailable command... $curr" ;;
	esac
done
