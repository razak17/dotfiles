#!/bin/bash

CONF='/usr/bin/git --git-dir=$HOME/.dots/dotfiles/ --work-tree=$HOME'
NCONF='/usr/bin/git --git-dir=$HOME/.dots/$EDITOR/ --work-tree=$HOME/.config/$EDITOR'

confStatus() {
  eval "$CONF status"
}

confAdd() {
  eval "$CONF add ./**/*"
}

confCommit() {
  if [[ -z "$*" ]]; then
    echo "-n should have the next argument contain actual session"
    exit 1
  else
    message="$*"
    echo message: $message
    eval "$CONF commit -m '${message}'"
    exit 1
  fi
}

confCommits() {
  eval "$CONF log --pretty=oneline --abbrev-commit -- ."
}

confCommitAll() {
  if [[ -z "$*" ]]; then
    echo "-n should have the next argument contain actual session"
    exit 1
  else
    message="$*"
    echo message: $message
    eval "$CONF commit -a -m '${message}'"
    exit 1
  fi
}

confPush() {
 eval "$CONF push"
}

nconfStatus() {
  eval "$NCONF status"
}

nconfAdd() {
  eval "$NCONF add ./*/**"
}

nconfCommit() {
  if [[ -z "$*" ]]; then
    echo "-n should have the next argument contain actual session"
    exit 1
  else
    message="$*"
    echo message: $message
    eval "$NCONF commit -m '${message}'"
    exit 1
  fi
}

nconfCommits() {
  eval "$NCONF log --pretty=oneline --abbrev-commit -- ."
}

nconfCommitAll() {
  if [[ -z "$*" ]]; then
    echo "-n should have the next argument contain actual session"
    exit 1
  else
    message="$*"
    echo message: $message
    eval "$NCONF commit -a -m '${message}'"
    exit 1
  fi
}

nconfPush() {
 eval "$NCONF push"
}


while [[ "$#" -gt 0 ]]; do
  curr=$1
  shift

  case "$curr" in
  "-cs")
    confStatus
    ;;
  "-csa")
    confAdd
    ;;
  "-ccom")
    confCommit "$*"
    ;;
  "-ccoms")
    confCommits
    ;;
  "-ccomall")
    read -p "Enter commit message: " arg
    confCommitAll "$arg"
    ;;
  "-cp")
    confPush
    ;;
  "-ncs")
    nconfStatus
    ;;
  "-ncsa")
    nconfAdd
    ;;
  "-nccom")
    nconfCommit "$*"
    ;;
  "-nccoms")
    nconfCommits
    ;;
  "-nccomall")
    nconfCommitAll "$*"
    ;;
  "-ncp")
    nconfPush
  ;;
  *) echo "Unavailable command... $curr"
  esac
done
