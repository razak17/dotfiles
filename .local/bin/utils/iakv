#!/bin/bash

ak_dir="$HOME/.dots/ak-dotfiles"
local_akv_dir="$HOME/.dots/nvim/nvim-ak"
[ ! -d "$ak_dir" ] && git clone https://github.com/akinsho/dotfiles/ $ak_dir
[ -d "$local_akv_dir" ] && sudo rm -r $local_akv_dir
pushd $ak_dir || exit
git checkout nightly
git pull
cp -r $ak_dir/.config/nvim "$HOME/.dots/nvim/nvim-ak"
