#!/bin/bash

brave=~/.cache/BraveSoftware/Brave-Browser/Default/Cache
conda=~/miniconda3/pkgs/cache
moz=~/.cache/mozilla/firefox/profiles/default/cache2
pip=~/.cache/pip
yarn=~/.cache/yarn
yay=~/.cache/yay
pkg=/var/cache/pacman/pkg

deleteDir() {
	dir=$1
	if [[ -d $dir ]]; then
		sudo rm -r "$dir"
		echo "${dir} has been removed."
	else
		echo "${dir} deos not exist."
	fi
}

while [[ "$#" -gt 0 ]]; do
	curr=$1
	shift

	case "$curr" in
	"-h")
		echo "help"
		;;
	"-a")
		deleteDir $brave
		deleteDir $conda
		deleteDir $moz
		deleteDir $pip
		deleteDir $yarn
		deleteDir $yay
		deleteDir $pkg
		;;
	"-b")
		deleteDir $brave
		;;
	"-c")
		deleteDir $conda
		;;
	"-m")
		deleteDir $moz
		;;
	"-y")
		deleteDir $yarn
		;;
	*) echo "Unavailable command... $curr" ;;
	esac
done
