#!/usr/bin/env bash
base_dir=$HOME/.mozilla/firefox/profiles
coding=$base_dir/coding
dev=$base_dir/dev
main=$base_dir/main
rec=$base_dir/rec

update_config() {
  pushd "$coding"|| exit
  "$coding"/updater.sh
  "$coding"/prefsCleaner.sh

  pushd "$dev"|| exit
  "$dev"/updater.sh
  "$dev"/prefsCleaner.sh

  pushd "$main"|| exit
  "$main"/updater.sh
  "$main"/prefsCleaner.sh

  pushd "$rec"|| exit
  "$rec"/updater.sh
  "$rec"/prefsCleaner.sh
}

update_config
