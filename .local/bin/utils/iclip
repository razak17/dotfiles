#!/bin/sh

mkdir -p ~/.dots/clip
clip_history=~/.dots/clip/clip_hist.txt

while [ "$#" -gt 0 ]; do
	curr=$1
	shift

	case "$curr" in
	-s)
		echo "$(xclip -o -sel c)" && notify-send -t 700 "saved!" >>$clip_history
		;;
	-l)
		echo "$(cat $clip_history | dmenu -l 10)" | tr -d '\n' | xclip -sel c && notify-send -t 700 "copied!"
		;;
	esac
done
