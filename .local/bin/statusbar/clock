#!/bin/sh

clock=$(date '+%I')

case "$clock" in
	"00") icon="🕛" ;;
	"01") icon="🕐" ;;
	"02") icon="🕑" ;;
	"03") icon="🕒" ;;
	"04") icon="🕓" ;;
	"05") icon="🕔" ;;
	"06") icon="🕕" ;;
	"07") icon="🕖" ;;
	"08") icon="🕗" ;;
	"09") icon="🕘" ;;
	"10") icon="🕙" ;;
	"11") icon="🕚" ;;
	"12") icon="🕛" ;;
esac

# date "+%Y %b %d (%a) $icon%I:%M%p"

# dte="$(date +"%a, %B %d %l:%M%p"| sed 's/  / /g')"
dte="$(date +"%a %b %d %y %H:%M:%S"| sed 's/  / /g')"
# date '+%a, %b %d %H:%M '
echo -e "$icon $dte"

