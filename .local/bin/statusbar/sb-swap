# free --mebi | sed -n '2{p;q}' | awk '{printf ("🔃 %2.2fGiB", ( $3 / 1024))}'
# echo -e "🔁 $swap"
free -h |  awk '/^Swap:/ {printf ("🔃 %2.2fGiB", ( $3 / 1024))}'
