#!/bin/sh

# A dmenu wrapper script for system functions.

# For non-systemd init systems.
# case "$(readlink -f /sbin/init)" in
# 	*runit*) hib="sudo -A zzz" ;;
# 	*openrc*) reb="sudo -A openrc-shutdown -r"; shut="sudo -A openrc-shutdown -p" ;;
# esac

# A dmenu wrapper script for system functions.
export WM="dwm"
case "$(readlink -f /sbin/init)" in
*systemd*) ctl='systemctl' ;;
*) ctl='loginctl' ;;
esac
wmpid() { # This function is needed if there are multiple instances of the window manager.
	tree="$(pstree -ps $$)"
	tree="${tree#*$WM(}"
	echo "${tree%%)*}"
}

cmds="\
ğŸ”’ lock		slock
â™» renew 	kill -HUP $(wmpid)
ğŸšª leave	${kx:-killall xinit}
ğŸ» hibernate	${hib:-slock $ctl hibernate -i}
ğŸ’¤ sleep	${sleep:-slock $ctl suspend -i}
ğŸ”ƒ reboot	${reb:-sudo openrc-shutdown -rq now}
ğŸ–¥ shutdown	${die:-sudo openrc-shutdown -pq now}
ğŸ“º display off	${off:-xset dpms force off}"

# choices="$(echo "$cmds" | cut -d'	' -f 1)" || exit 1
choices="$(echo "$cmds" | cut -d'	' -f 1 | dmenu -l 10)" || exit 1

# echo $choices
eval "$(echo "$cmds" | grep "^$choices	" | cut -d '	' -f2-)"
